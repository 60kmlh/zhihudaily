@import '../../assets/style/vari'

.slidelist
  z-index 10
  .cover
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background rgba(0,0,0,.7)
.slidelist_wrap
  position fixed
  left 0
  top 0
  bottom 0
  width 290px
  background-color #fff
.slidelist_header
  background-color main_bc
  height 104px
  padding 15px
  color #fff
.slidelist_header_info
  display flex
  height 30px
  line-height 30px
  img
    height 100%
    width auto
    margin-right 20px
    border-radius 15px
.slidelist_function
  margin-top 25px
  padding 0 20px
  i
    font-size 1rem
    margin-right 15px
.slidelist_function_item
  display flex
  font-size 12px
  height 20px
  line-height 20px
.slidelist_list
  overflow-y auto
  padding 20px
  font-size 12px
  height calc(100vh - 104px)
  li
    display flex
    justify-content space-between
    height 50px
    line-height 50px
    color #2c3e50
    i
      color #868686
      font-size 16px
.slidelist_list_first
  display flex 
  color main_bc
  font-size 16px
  i
    font-size 24px
    margin-right 12px