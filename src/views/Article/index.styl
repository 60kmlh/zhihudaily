@import '../../assets/style/vari'

.artical_banner
  position relative
  height 200px
  overflow hidden
  color #fff
  img
    width 100%
    height auto
    margin-top calc((200px - 100vw) / 2)
.artical_title
  position absolute
  bottom 0
  height 80px
  width 100%
  background-image linear-gradient(bottom,rgba(0,0,0,.7),rgba(0,0,0,.1) 40%,rgba(0,0,0,.1))
  background-image -webkit-linear-gradient(bottom,rgba(0,0,0,.7),rgba(0,0,0,.1) 40%,rgba(0,0,0,.1))
  h2
    position absolute
    padding 0 20px
    bottom 20px
    font-size 18px
    font-weight 100
  span
    position absolute
    bottom 8px
    right 20px
    font-size 10px
.artical_bottom
  padding 20px
  .btn
    width 300px
    margin 0 auto
    text-align center
    background-color main_bc
    height 30px
    line-height 30px
    color #fff
    border-radius 5px